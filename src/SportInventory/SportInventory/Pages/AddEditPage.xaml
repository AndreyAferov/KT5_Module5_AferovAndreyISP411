<Page x:Class="SportInventory.Pages.AddEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SportInventory.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="AddEditPage"
      Background="white">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"></RowDefinition>
            <RowDefinition Height="70"></RowDefinition>
            <RowDefinition Height="70"></RowDefinition>
            <RowDefinition Height="70"></RowDefinition>
            <RowDefinition Height="70"></RowDefinition>
            <RowDefinition Height="70"></RowDefinition>
            <RowDefinition Height="70"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition ></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Label Content="Id:" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="0" Grid.Column="0"/>
        <Label Content="Фамилия:" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="1" Grid.Column="0"/>
        <Label Content="Имя:" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="2" Grid.Column="0"/>
        <Label Content="Отчество:" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="3" Grid.Column="0"/>
        <Label Content="Должность:" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="4" Grid.Column="0"/>
        <Label Content="Дата рождения:" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="5" Grid.Column="0"/>
        <Label Content="Телефон:" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="0" Grid.Column="2"/>
        <Label Content="Пол:" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="1" Grid.Column="2"/>
        <Label Content="Email:" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="2" Grid.Column="2"/>
        <Label Content="Логин:" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="3" Grid.Column="2"/>
        <Label Content="Пароль:" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="4" Grid.Column="2"/>
        <Label Content="Подтверждение пароля:" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="5" Grid.Column="2"/>

        
        
        <TextBox HorizontalAlignment="Left" x:Name="IdTextBox" Grid.Row="0" Grid.Column="1" IsReadOnly="True"/>
        <TextBox HorizontalAlignment="Left" x:Name="Surname" Grid.Row="1" Grid.Column="1"/>
        <TextBox HorizontalAlignment="Left" x:Name="Name" Grid.Row="2" Grid.Column="1"/>
        <TextBox HorizontalAlignment="Left" x:Name="Patronymic" Grid.Row="3" Grid.Column="1"/>
        <ComboBox HorizontalAlignment="Left" DisplayMemberPath="NameRole" x:Name="RoleCombo" Grid.Row="4" Grid.Column="1"/>
        <DatePicker HorizontalAlignment="Left" x:Name="BirthDate" Grid.Row="5" Grid.Column="1"/>
        <TextBox HorizontalAlignment="Left" x:Name="Phone" Grid.Row="0" Grid.Column="3"/>
        <ComboBox HorizontalAlignment="Left" DisplayMemberPath="MaleFemaleName" x:Name="GenderComboBox" Grid.Row="1" Grid.Column="3"/>
        <TextBox HorizontalAlignment="Left" x:Name="Email" Grid.Row="2" Grid.Column="3"/>
        <TextBox HorizontalAlignment="Left" x:Name="Login" Grid.Row="3" Grid.Column="3"/>
        <PasswordBox HorizontalAlignment="Left" x:Name="Password" Grid.Row="4" Grid.Column="3"/>
        <PasswordBox HorizontalAlignment="Left" x:Name="ConfirmPassword" Grid.Row="5" Grid.Column="3"/>

        
        <Button Content="Назад" x:Name="BackButton" Grid.Row="9" Grid.Column="0" HorizontalAlignment="Right" Click="BackButton_Click"/>
        <Button HorizontalAlignment="Left" Content="Сохранить" x:Name="SaveButton" Grid.Row="9" Grid.Column="3" Click="SaveButton_Click"/>
    </Grid>
</Page>
