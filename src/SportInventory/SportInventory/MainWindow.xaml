<Window x:Class="SportInventory.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SportInventory"
        mc:Ignorable="d"
        Title="ИС по прокату спортивного инвентаря" Height="650" Width="1000"
        MinHeight="650"
        MinWidth="1000"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid  Grid.Row="0" Background="#FF76E383">
            <Label HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="35" Content="Прокат спортивного инвентаря"></Label>
        </Grid>
        <Frame  Grid.Row="1" x:Name="MainFrame" NavigationUIVisibility="Hidden" ></Frame>
    </Grid>
</Window>
